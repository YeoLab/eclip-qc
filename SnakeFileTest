rule all:
    input:
        "/oasis/tscc/scratch/eczhang/larp6/larp6_GRCh38/results/"LARP6.CTRL_IN1.umi.r1.fq._unmapped_1mil.bam"

rule unmapped:
    input:
        bam="/oasis/tscc/scratch/eczhang/larp6/larp6_GRCh38/results/LARP6.CTRL_IN1.umi.r1.fq.genome-mapped.bam"
    output:
        bam="/oasis/tscc/scratch/eczhang/larp6/larp6_GRCh38/results/"LARP6.CTRL_IN1.umi.r1.fq._unmapped_1mil.bam"
    conda:
        "envs/samtools.yaml"
    shell:
        "samtools view -f 4 -s... {input} > {output}"
