rule all:
    params:

#extract random sample of 10000 unmapped reads from bam file, requires using samtools
rule unmapped:
    input:
        bam="results/{sample}genome-mapped.bam"
    output:
        bam="larp6_unmapped/{sample}.bam"
    conda:
        "envs/samtools.yaml"
    shell:
        "samtools view -f 4 -s... {input} > {output}"
