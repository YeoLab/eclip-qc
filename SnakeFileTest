rule all:
    input:
        "/oasis/tscc/scratch/eczhang/larp6/larp6_GRCh38/results/"LARP6.CTRL_IN1.umi.r1.fq.txt"

rule unmapped:
    input:
        bam="/oasis/tscc/scratch/eczhang/larp6/larp6_GRCh38/results/LARP6.CTRL_IN1.umi.r1.fq.genome-mapped.bam"
    output:
        txt="/oasis/tscc/scratch/eczhang/larp6/larp6_GRCh38/results/"LARP6.CTRL_IN1.umi.r1.fq.txt"
    conda:
        "envs/samtools.yaml"
    shell:
        "samtools view -c -f 4 {input.bam} > {output.txt}"
